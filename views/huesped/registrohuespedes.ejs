   <div class="container">
    <div class="col-sm-3"></div>
    <div class="signup-form-container col-sm-6 opaque1">

        <form role="form" id="register-form" autocomplete="off" action="
           
           <% if (session.credencialSegura) { %>
       /reserva/finalizar
    <% } else { %>
           /login
           <% } %>
           
           " method="post">
            <div class="form-header">
                <h3 class="form-title"><i class="fa fa-user"></i>Registrar Huésped(es)</h3>
            </div>
            <% for (var i = 0; i < num_huespedes; i++) { %>
                <div class="form-body row">
                    <div class="form-group col-sm-6">
                        <div class="input-group">
                            <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                            <input name="nombre_huesped" type="text" class="form-control" placeholder="Nombre del Huésped" required>
                        </div>
                    </div>
                    <div class="form-group col-sm-6">
                        <div class="input-group">
                            <div class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></div>
                            <input name="dni" type="number" class="form-control" placeholder="Cédula/Pasaporte" required>
                        </div>
                    </div>
                </div>
                <% } %>
                    <button type="submit" class="btn btn-success">
                    <span class="glyphicon glyphicon-log-in"></span> Registrar Huésped(es)!
                </button>
                <!-- NECESARIOS PARA LA RESERVA -->
                <input type="hidden" name="fecha_inicio" value="<%= fecha_inicio %>">
                <input type="hidden" name="fecha_fin" value="<%= fecha_fin %>">
                <input type="hidden" name="id_hab" value="<%= id_hab %>">

                <!-- PARA REALIZAR CALCULOS -->
                <input type="hidden" name="costo_total" value="<%= costo_total %>">
                <input type="hidden" name="num_huespedes" value="<%= num_huespedes %>">
                <input type="hidden" name="total_dias" value="<%= total_dias %>">

                <!-- FALTA ID DEL CLIENTE -->

        </form>
        <br />
    </div>
    <div class="col-sm-3"></div>
</div>
